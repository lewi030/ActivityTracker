<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_activity_title_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Activity Title"/>

    <TextView
        android:id="@+id/list_item_activity_date_text_view"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Activity Date"
        android:layout_below="@+id/list_item_activity_title_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/list_item_activity_location_text_view"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Activity Location"
        android:layout_alignBaseline="@+id/list_item_activity_date_text_view"
        android:layout_alignBottom="@+id/list_item_activity_date_text_view"
        android:layout_toRightOf="@+id/list_item_activity_date_text_view"
        android:layout_toEndOf="@+id/list_item_activity_date_text_view"/>

</RelativeLayout>
